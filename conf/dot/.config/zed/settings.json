{
    "theme": "Gruvbox Dark Hard",
    "autosave": {
        "after_delay": {
            "milliseconds": 1000
        }
    },
    "buffer_font_family": "CaskaydiaMono Nerd Font",
    "buffer_font_size": 14,
    "buffer_font_weight": 400,
    "confirm_quit": false,
    "cursor_blink": false,
    "enable_language_server": true,
    "ensure_final_newline_on_save": true,
    "format_on_save": "on",
    "tab_size": 4,
    "telemetry": {
        "metrics": false,
        "diagnostics": false
    },
    "terminal": {
        "copy_on_select": true,
        "dock": "bottom",
        "line_height": "comfortable",
        "option_as_meta": true,
        "working_directory": "current_project_directory"
    },
    "vim_mode": true
}
